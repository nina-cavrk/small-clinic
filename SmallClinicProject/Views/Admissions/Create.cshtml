@model SmallClinicProject.Models.AdmissionViewModel

<h2>Rezerviši novi termin</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="PatientId">Pacijent</label>
        <select asp-for="PatientId" class="form-control" asp-items="Model.Patients" id="PatientId">
            <option value="">Odaberite pacijenta</option>
        </select>
        <span asp-validation-for="PatientId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DoctorId">Nadležni ljekar</label>
        <select asp-for="DoctorId" class="form-control" asp-items="Model.Doctors" id="DoctorId">
            <option value="">Odaberite ljekara</option>
        </select>
        <span asp-validation-for="DoctorId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ReceptionDateTime">Datum termina</label>
        <input asp-for="ReceptionDateTime" id="receptionDateTime" class="form-control flatpickr-datetime" type="text" />
        <span asp-validation-for="ReceptionDateTime" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EmergencyAdmission">Hitan prijem</label>
        <input asp-for="EmergencyAdmission" type="checkbox" class="form-check-input" />
    </div>


    <button type="submit" class="btn btn-primary">Sačuvaj</button>
    <button type="button" class="btn btn-secondary" onclick="history.back()">Odustani</button>

</form>

@section Scripts {
    @Html.Partial("_ValidationScriptsPartial") 

        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
        <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                flatpickr(".flatpickr-datetime", {
                    enableTime: true,
                    dateFormat: "Y-m-d H:i",
                    defaultDate: new Date().setHours(new Date().getHours())
                });
            });
        </script>
}
